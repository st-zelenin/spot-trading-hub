{
  "name": "spot-trading-hub",
  "version": "1.0.0",
  "description": "A Node.js application for managing crypto exchange spot orders",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run tsoa:generate && tsc",
    "dev": "nodemon",
    "test": "jest",
    "tsoa:generate": "npx tsoa spec-and-routes",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "validate": "npm run format && npm run lint:fix && npm run check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "crypto",
    "exchange",
    "spot",
    "trading",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/cosmos": "^4.5.0",
    "@binance/connector-typescript": "^0.3.16",
    "@binance/spot": "^13.0.1",
    "@binance/types": "^1.0.3",
    "@tsoa/runtime": "^6.6.0",
    "bybit-api": "^4.2.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gts": "^5.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
